---

<Layout title="Gallery" description="Visualise the future of Masjid Al Ummah through our architectural renderings.">
  <!-- Page Header -->
  <div class="bg-primary/10 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-dark mb-6">Gallery</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        A glimpse into the future of Masjid Al Ummah. Explore the architectural renderings of our upcoming community hub.
      </p>
    </div>
  </div>

  <!-- Gallery Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {images.map((image, index) => (
          <div
            class="gallery-item group rounded-2xl shadow-md bg-white overflow-hidden cursor-pointer hover:shadow-xl transition-all duration-300 border border-gray-100 flex flex-col h-full"
            data-index={index}
            data-src={image.src}
            data-title={image.title}
          >
            <div class="aspect-video w-full overflow-hidden">
              <img
                src={image.src}
                alt={image.alt}
                loading="lazy"
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
              />
            </div>
            <div class="p-6 flex-grow flex flex-col justify-center text-center">
              <h3 class="text-xl font-bold text-dark">{image.title}</h3>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Lightbox -->
  <div id="lightbox" class="fixed inset-0 bg-black/95 z-[100] hidden items-center justify-center backdrop-blur-sm">
    <button id="lightbox-close" class="absolute top-4 right-4 text-white hover:text-primary transition-colors z-10 p-2">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <button id="lightbox-prev" class="absolute left-4 top-1/2 -translate-y-1/2 text-white hover:text-primary transition-colors p-2 bg-black/20 rounded-full hover:bg-black/40">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
    </button>
    <button id="lightbox-next" class="absolute right-4 top-1/2 -translate-y-1/2 text-white hover:text-primary transition-colors p-2 bg-black/20 rounded-full hover:bg-black/40">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </button>
    <div class="max-w-7xl max-h-[90vh] px-4 md:px-16 flex flex-col items-center">
      <img id="lightbox-img" src="" alt="" class="max-w-full max-h-[80vh] object-contain mx-auto rounded-lg shadow-2xl" />
      <p id="lightbox-title" class="text-white text-center mt-6 text-xl font-semibold tracking-wide"></p>
    </div>
  </div>

  <!-- CTA Section -->
  <section class="py-16 bg-dark text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-6">Help Us Build the Future</h2>
      <p class="text-gray-300 mb-8 max-w-xl mx-auto">
        These renderings are just the beginning. Join us in making this vision a reality for the Watford community.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/project" class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white/10 transition-all">
          Project Details
        </a>
        <a href="/donate" class="px-8 py-4 bg-primary text-white font-bold rounded-lg hover:bg-accent transition-all">
          Donate to Phase 2
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
    const lightboxTitle = document.getElementById('lightbox-title');
    const closeBtn = document.getElementById('lightbox-close');
    const prevBtn = document.getElementById('lightbox-prev');
    const nextBtn = document.getElementById('lightbox-next');
    const galleryItems = document.querySelectorAll('.gallery-item');

    let currentIndex = 0;
    const images: { src: string; title: string }[] = [];

    galleryItems.forEach((item, index) => {
      const src = item.getAttribute('data-src') || '';
      const title = item.getAttribute('data-title') || '';
      images.push({ src, title });

      item.addEventListener('click', () => {
        currentIndex = index;
        showImage();
      });
    });

    function showImage() {
      if (!lightbox || !lightboxImg || !lightboxTitle) return;
      lightboxImg.src = images[currentIndex].src;
      lightboxTitle.textContent = images[currentIndex].title;
      lightbox.classList.remove('hidden');
      lightbox.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }

    function hideImage() {
      if (!lightbox) return;
      lightbox.classList.add('hidden');
      lightbox.classList.remove('flex');
      document.body.style.overflow = '';
    }

    function nextImage() {
      currentIndex = (currentIndex + 1) % images.length;
      showImage();
    }

    function prevImage() {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      showImage();
    }

    closeBtn?.addEventListener('click', hideImage);
    prevBtn?.addEventListener('click', prevImage);
    nextBtn?.addEventListener('click', nextImage);

    lightbox?.addEventListener('click', (e) => {
      if (e.target === lightbox) hideImage();
    });

    document.addEventListener('keydown', (e) => {
      if (!lightbox?.classList.contains('hidden')) {
        if (e.key === 'Escape') hideImage();
        if (e.key === 'ArrowLeft') prevImage();
        if (e.key === 'ArrowRight') nextImage();
      }
    });
  });
</script>
