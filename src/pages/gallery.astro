---
import Layout from '../layouts/Layout.astro';

const images = [
  {
    src: "/images/renderings/mau-rendering-hero.jpg",
    alt: "Masjid Al Ummah Hero Rendering",
    title: "Main Entrance View"
  },
  {
    src: "/images/renderings/mau-rendering-cam-03.jpg",
    alt: "Masjid Al Ummah Side View",
    title: "Exterior Perspective"
  },
  {
    src: "/images/renderings/mau-rendering-cam-04.jpg",
    alt: "Masjid Al Ummah Community Space",
    title: "Community Area"
  },
  {
    src: "/images/renderings/mau-rendering-cam-06.jpg",
    alt: "Masjid Al Ummah Evening View",
    title: "Evening Lighting"
  }
];
---

<Layout title="Gallery" description="Visualise the future of Masjid Al Ummah through our architectural renderings.">
  <!-- Page Header -->
  <div class="bg-primary/10 py-20">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-dark mb-6">Gallery</h1>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">
        A glimpse into the future of Masjid Al Ummah. Explore the architectural renderings of our upcoming community hub.
      </p>
    </div>
  </div>

  <!-- Gallery Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {images.map((image) => (
          <div class="group relative overflow-hidden rounded-2xl shadow-lg bg-secondary aspect-video">
            <img
              src={image.src}
              alt={image.alt}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-6">
              <div class="text-white">
                <h3 class="text-xl font-bold">{image.title}</h3>
                <p class="text-sm text-gray-200">Architectural Rendering</p>
                <a
                  href={image.src}
                  target="_blank"
                  class="mt-4 inline-block text-sm font-semibold underline hover:text-primary transition-colors"
                >
                  View Full Size
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-dark text-white text-center">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-6">Help Us Build the Future</h2>
      <p class="text-gray-300 mb-8 max-w-xl mx-auto">
        These renderings are just the beginning. Join us in making this vision a reality for the Watford community.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/project" class="px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-lg hover:bg-white/10 transition-all">
          Project Details
        </a>
        <a href="https://www.launchgood.com/campaign/masjid_al_ummah_watford_phase_2#!/" target="_blank" class="px-8 py-4 bg-primary text-white font-bold rounded-lg hover:bg-primary-dark transition-all">
          Donate to Phase 2
        </a>
      </div>
    </div>
  </section>
</Layout>
