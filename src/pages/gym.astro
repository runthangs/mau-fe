---
import Layout from '../layouts/Layout.astro';

const gymFeatures = [
  {
    title: "State-of-the-Art Equipment",
    description: "Modern cardio machines, free weights, resistance equipment, and functional training zones designed for all fitness levels.",
    icon: "M13 10V3L4 14h7v7l9-11h-7z"
  },
  {
    title: "Fully Segregated Gyms",
    description: "Completely separate gym facilities for brothers and sisters, each with their own changing rooms, showers, and equipment. True privacy, not just separate time slots.",
    icon: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
  },
  {
    title: "Qualified Trainers",
    description: "Experienced fitness instructors who understand and respect Islamic values while helping you achieve your health goals.",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
  },
  {
    title: "Prayer Facilities",
    description: "Convenient prayer room adjacent to the gym with wudu facilities, so you never miss salah during your workout.",
    icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
  },
  {
    title: "Halal Nutrition Bar",
    description: "Fresh protein shakes, healthy snacks, and supplements that are 100% halal certified to fuel your fitness journey.",
    icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
  },
  {
    title: "Community Spirit",
    description: "Train alongside fellow community members in a supportive environment that promotes both physical and spiritual wellbeing.",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
  }
];

const equipment = [
  { name: "Cardio Zone", items: ["Treadmills", "Ellipticals", "Exercise Bikes", "Rowing Machines", "Stair Climbers"] },
  { name: "Strength Training", items: ["Free Weights", "Dumbbells", "Barbells", "Cable Machines", "Power Racks"] },
  { name: "Functional Fitness", items: ["Kettlebells", "Battle Ropes", "Medicine Balls", "TRX Suspension", "Resistance Bands"] },
  { name: "Recovery Area", items: ["Stretching Mats", "Foam Rollers", "Massage Chairs", "Cool-down Zone", "Hydration Station"] }
];

const islamicPrinciples = [
  {
    title: "Caring for the Body",
    verse: "Your body has a right over you.",
    source: "Sahih al-Bukhari",
    description: "Islam teaches us that our bodies are an amanah (trust) from Allah. Maintaining physical health is not just permitted but encouraged as part of our worship."
  },
  {
    title: "The Strong Believer",
    verse: "The strong believer is better and more beloved to Allah than the weak believer, while there is good in both.",
    source: "Sahih Muslim",
    description: "Physical strength enables us to better worship Allah, serve our families, and contribute to our community."
  },
  {
    title: "Modesty & Privacy",
    verse: "Modesty is part of faith.",
    source: "Sahih al-Bukhari",
    description: "Our gym provides a modest environment with separate sessions, allowing everyone to exercise comfortably while maintaining Islamic principles of haya (modesty)."
  }
];

const membershipPlans = [
  {
    name: "Individual",
    price: "Coming Soon",
    period: "",
    features: ["Full gym access", "Both gyms available", "Locker facilities", "Prayer room access", "Fitness assessment"],
    highlighted: false
  },
  {
    name: "Family",
    price: "Coming Soon",
    period: "",
    features: ["Up to 4 family members", "All individual benefits", "Family fitness programs", "Youth training sessions", "Priority booking"],
    highlighted: true
  },
  {
    name: "Ummah Points",
    price: "Free",
    period: "with points",
    features: ["Earn points at jama'ah prayers", "Volunteer hours = points", "Community participation", "100 points = 1 day access", "No cost - just contribution"],
    highlighted: false
  }
];
---

<Layout title="Masjid Al-Ummah Fitness Centre" description="A faith-based gym promoting physical wellbeing through Islamic values. Separate sessions, halal nutrition, and a supportive community environment.">
  <!-- Opening Banner -->
  <div class="bg-gradient-to-r from-primary to-accent text-white py-4">
    <div class="container mx-auto px-4 text-center">
      <div class="flex items-center justify-center gap-3">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span class="text-lg font-bold uppercase tracking-wider">Expected to Open 2027</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 animate-pulse" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <p class="text-sm opacity-90 mt-1">Part of the new Masjid Al Ummah community centre</p>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="relative bg-dark text-white py-24 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1623874514711-0f321325f318?w=1920&q=80"
        alt="Gym equipment"
        class="w-full h-full object-cover opacity-30"
      />
      <div class="absolute inset-0 bg-gradient-to-br from-dark via-dark/80 to-primary/20"></div>
    </div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-block px-4 py-2 bg-primary/20 rounded-full text-primary mb-6">
          <span class="font-semibold">Masjid Al-Ummah Fitness Centre</span>
        </div>
        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
          Strengthen Your Body,<br/>
          <span class="text-primary">Nurture Your Soul</span>
        </h1>
        <p class="text-xl text-gray-300 mb-8 max-w-2xl mx-auto">
          A faith-based fitness facility designed for the Muslim community. Train in a comfortable, halal environment that respects Islamic values while helping you achieve your health goals.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="#register-interest" class="bg-primary text-white px-8 py-4 rounded-full font-semibold hover:bg-accent transition-colors shadow-lg">
            Register Your Interest
          </a>
          <a href="#features" class="border-2 border-white/30 text-white px-8 py-4 rounded-full font-semibold hover:bg-white/10 transition-colors">
            Explore Features
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Ummah Points System -->
  <section class="py-20 bg-gradient-to-br from-primary to-accent text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-block px-4 py-2 bg-white/20 rounded-full mb-4">
            <span class="font-semibold">Unique to Masjid Al-Ummah</span>
          </div>
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Ummah Points: Earn Free Gym Access</h2>
          <p class="text-white/80 max-w-2xl mx-auto">
            We believe fitness should be accessible to everyone. Earn points through participation in community and spiritual activities, and redeem them for free gym access.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-6 mb-12">
          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Jama'ah Prayers</h3>
            <p class="text-white/70 text-sm mb-4">Earn points for each congregational prayer attended at the masjid</p>
            <span class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold">+5 points per prayer</span>
          </div>

          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Volunteer Service</h3>
            <p class="text-white/70 text-sm mb-4">Help with mosque activities, events, cleaning, or administration</p>
            <span class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold">+20 points per hour</span>
          </div>

          <div class="bg-white/10 backdrop-blur rounded-2xl p-6 text-center">
            <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-2">Community Activities</h3>
            <p class="text-white/70 text-sm mb-4">Participate in classes, workshops, charity work, or community events</p>
            <span class="inline-block px-4 py-2 bg-white/20 rounded-full text-sm font-semibold">+10-50 points</span>
          </div>
        </div>

        <div class="bg-white/10 backdrop-blur rounded-2xl p-8 text-center">
          <h3 class="text-2xl font-bold mb-4">How It Works</h3>
          <div class="grid md:grid-cols-4 gap-4 text-sm">
            <div>
              <div class="w-10 h-10 bg-white text-primary rounded-full flex items-center justify-center font-bold mx-auto mb-2">1</div>
              <p>Register for an Ummah Points account</p>
            </div>
            <div>
              <div class="w-10 h-10 bg-white text-primary rounded-full flex items-center justify-center font-bold mx-auto mb-2">2</div>
              <p>Attend prayers and participate in activities</p>
            </div>
            <div>
              <div class="w-10 h-10 bg-white text-primary rounded-full flex items-center justify-center font-bold mx-auto mb-2">3</div>
              <p>Accumulate points automatically</p>
            </div>
            <div>
              <div class="w-10 h-10 bg-white text-primary rounded-full flex items-center justify-center font-bold mx-auto mb-2">4</div>
              <p>Redeem 100 points = 1 day free gym access</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Islamic Principles Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Fitness with Faith</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Our gym is built upon Islamic principles that encourage physical wellbeing as an act of worship.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {islamicPrinciples.map((principle) => (
          <div class="bg-secondary rounded-2xl p-8 text-center border border-gray-100">
            <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark mb-3">{principle.title}</h3>
            <blockquote class="text-primary font-medium italic mb-2">"{principle.verse}"</blockquote>
            <p class="text-sm text-gray-500 mb-4">— {principle.source}</p>
            <p class="text-gray-600 text-sm">{principle.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section id="features" class="py-20 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Our Facilities</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Everything you need for a complete fitness experience in a halal, family-friendly environment.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {gymFeatures.map((feature) => (
          <div class="bg-white rounded-xl p-8 shadow-sm hover:shadow-lg transition-shadow border border-gray-100">
            <div class="w-14 h-14 bg-primary/10 rounded-xl flex items-center justify-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={feature.icon} />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-dark mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Equipment Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">World-Class Equipment</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Our gym will be equipped with premium fitness equipment to support your training goals.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-6xl mx-auto">
        {equipment.map((zone) => (
          <div class="bg-gradient-to-br from-dark to-gray-800 rounded-2xl p-6 text-white">
            <h3 class="text-lg font-bold mb-4 text-primary">{zone.name}</h3>
            <ul class="space-y-2">
              {zone.items.map((item) => (
                <li class="flex items-center gap-2 text-gray-300">
                  <svg class="w-4 h-4 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gym Gallery -->
  <section class="py-16 bg-secondary">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Envision Your Training Space</h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Our state-of-the-art facility will feature modern equipment in a clean, inspiring environment.
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 max-w-6xl mx-auto">
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1638536532686-d610adfc8e5c?w=400&q=80"
            alt="Dumbbells rack"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1593079831268-3381b0db4a77?w=400&q=80"
            alt="Treadmills"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1623874514711-0f321325f318?w=400&q=80"
            alt="Weight plates"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1558611848-73f7eb4001a1?w=400&q=80"
            alt="Kettlebells"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg md:col-span-2">
          <img
            src="https://images.unsplash.com/photo-1540497077202-7c8a3999166f?w=800&q=80"
            alt="Gym equipment floor"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1517836357463-d25dfeac3438?w=400&q=80"
            alt="Barbell and weights"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
        <div class="aspect-square rounded-xl overflow-hidden shadow-lg">
          <img
            src="https://images.unsplash.com/photo-1581009146145-b5ef050c149a?w=400&q=80"
            alt="Cable machine"
            class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
          />
        </div>
      </div>

      <p class="text-center text-gray-500 text-sm mt-6 italic">
        *Images are representative of the quality and style of equipment planned for our facility.
      </p>
    </div>
  </section>

  <!-- Segregated Facilities Section -->
  <section class="py-20 bg-primary/10">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-dark mb-4">Fully Segregated Facilities</h2>
          <p class="text-gray-600">
            Two completely separate gym spaces, each with their own entrance, changing rooms, showers, and full equipment set. Not just separate sessions — separate gyms.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-white rounded-2xl p-8 shadow-lg border-t-4 border-primary">
            <div class="flex items-center gap-4 mb-6">
              <div class="w-12 h-12 bg-primary/10 rounded-full flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
              <h3 class="text-2xl font-bold text-dark">Brothers Gym</h3>
            </div>
            <ul class="space-y-3 text-gray-600">
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Dedicated entrance
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Full equipment set
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Private changing rooms & showers
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Male trainers only
              </li>
              <li class="flex items-center gap-3">
                <svg class="w-5 h-5 text-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                Open 6:00 AM - 10:00 PM daily
              </li>
